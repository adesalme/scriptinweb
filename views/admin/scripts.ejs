<%- contentFor('stylesheets') %>
<style>
    .ps-console {
        background-color: #1e1e1e;
        color: #f0f0f0;
        font-family: 'Consolas', 'Monaco', monospace;
        padding: 10px;
        height: 400px;
        overflow-y: auto;
        border-radius: 4px;
    }
    .ps-console .error {
        color: #ff5555;
    }
    .ps-console .success {
        color: #50fa7b;
    }
    .ps-console .warning {
        color: #ffb86c;
    }
    .ps-console .command {
        color: #8be9fd;
    }
    .CodeMirror {
        height: 400px;
        border-radius: 4px;
    }
</style>

<%- contentFor('body') %>
<div class="row">
    <div class="col-12">
        <h2>Scripts Administratifs</h2>
        <p class="text-muted">Gérez les scripts PowerShell administratifs.</p>

        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Scripts</h5>
                        <button class="btn btn-primary btn-sm" onclick="createNewScript()">
                            <i class="bi bi-plus-lg"></i> Nouveau
                        </button>
                    </div>
                    <ul class="list-group list-group-flush" id="scriptsList">
                        <!-- Les scripts seront chargés ici dynamiquement -->
                    </ul>
                </div>
            </div>
            
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Éditeur</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <input type="text" class="form-control" id="scriptName" placeholder="Nom du script">
                        </div>
                        <textarea id="editor"></textarea>
                        <div class="mt-3">
                            <button class="btn btn-primary" onclick="saveScript()">
                                <i class="bi bi-save"></i> Enregistrer
                            </button>
                            <button class="btn btn-success" onclick="executeCurrentScript()">
                                <i class="bi bi-play-fill"></i> Exécuter
                            </button>
                        </div>
                    </div>
                </div>

                <div class="card mt-3">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Console</h5>
                        <button class="btn btn-outline-secondary btn-sm" onclick="clearConsole()">
                            <i class="bi bi-trash"></i> Effacer
                        </button>
                    </div>
                    <div class="card-body p-0">
                        <div class="ps-console" id="console"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- contentFor('scripts') %>
<script src="/js/admin-scripts.js"></script> 