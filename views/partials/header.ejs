<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PowerShell Web Editor</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.2/codemirror.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.2/theme/monokai.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/style.css">
    
    <!-- Socket.IO -->
    <script src="/socket.io/socket.io.js"></script>
    
    <!-- CodeMirror JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.2/codemirror.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.2/mode/powershell/powershell.min.js"></script>
    
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    
    <style>
        .ps-console {
            background-color: #1e1e1e;
            color: #f0f0f0;
            font-family: 'Consolas', 'Monaco', monospace;
            padding: 10px;
            height: 400px;
            overflow-y: auto;
            border-radius: 4px;
        }
        .ps-console .error {
            color: #ff5555;
        }
        .ps-console .success {
            color: #50fa7b;
        }
        .ps-console .warning {
            color: #ffb86c;
        }
        .ps-console .command {
            color: #8be9fd;
        }
        .CodeMirror {
            height: 400px;
            border-radius: 4px;
        }
    </style>
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">PowerShell Web Editor</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">
                            <i class="bi bi-file-earmark-code"></i> Éditeur de Scripts
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/shell">
                            <i class="bi bi-terminal"></i> Shell PowerShell
                        </a>
                    </li>
                    <% if (user && user.isAdmin) { %>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-shield-lock"></i> Administration
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                <li>
                                    <a class="dropdown-item" href="/admin/scripts">
                                        <i class="bi bi-file-earmark-lock"></i> Scripts Admin
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="/admin/users">
                                        <i class="bi bi-people"></i> Utilisateurs
                                    </a>
                                </li>
                            </ul>
                        </li>
                    <% } %>
                </ul>
                <div class="d-flex align-items-center">
                    <% if (user) { %>
                        <span class="text-light me-3">
                            <i class="bi bi-person-circle"></i>
                            <%= user.displayName %> (<%= user.userPrincipalName %>)
                        </span>
                        <a href="/auth/logout" class="btn btn-outline-light btn-sm">
                            <i class="bi bi-box-arrow-right"></i> Déconnexion
                        </a>
                    <% } %>
                </div>
            </div>
        </div>
    </nav>

    <!-- Script pour initialiser les dropdowns -->
    <script>
    document.addEventListener('DOMContentLoaded', function() {
        // Initialiser tous les dropdowns Bootstrap
        var dropdowns = document.querySelectorAll('.dropdown-toggle');
        dropdowns.forEach(function(dropdown) {
            new bootstrap.Dropdown(dropdown);
        });
    });
    </script>
</body>
</html> 