# Configuration du serveur
NODE_ENV=development
PORT=3000
HTTPS_PORT=8443
HOST=localhost

# Configuration SSL
SSL_ENABLED=false
SSL_CERT_PATH=ssl/cert.pem
SSL_KEY_PATH=ssl/key.pem

# Configuration Azure AD
AZURE_AD_CLIENT_ID=your_client_id
AZURE_AD_CLIENT_SECRET=your_client_secret
AZURE_AD_TENANT_ID=your_tenant_id
AZURE_AD_REDIRECT_URI=http://localhost:3000/auth/callback

# Configuration de l'application
APP_NAME=PowerShell Web Editor
APP_URL=http://localhost:3000
APP_DESCRIPTION=Éditeur de scripts PowerShell avec authentification Azure AD

# Configuration des dossiers
SCRIPTS_DIR=scripts/user
ADMIN_SCRIPTS_DIR=scripts/admin
SESSION_STORE_PATH=sessions

# Configuration de la session
SESSION_SECRET=your_session_secret

# Configuration du mode démonstration
DEMO_MODE=false